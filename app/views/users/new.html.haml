= form_for @user do |f|
  - if @user.errors.any? 
    .error_messages
      %h3 Form is invalid
      %ul
        - for message in @user.errors.full_messages 
          %li= message 
      
  .field
    =f.label :username
    =f.text_field :username

  .field
    =f.label :email
    =f.text_field :email

  .field
    =f.label :pasword
    =f.password_field :password

  .field
    =f.label :password_confirmation
    =f.password_field :password_confirmation

  =f.submit "Sign up!"